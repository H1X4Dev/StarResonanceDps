<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup />
  <ItemGroup>
    <Compile Update="Control\DataDisplaySettings.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Control\Setup.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Control\SkillDetailForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Control\SkillDetailForm.Function.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Forms\MainForm.Function.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Control\TextProgressBar.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Control\UserUidSet.cs">
      <SubType>UserControl</SubType>
    </Compile>
    <Compile Update="Forms\DpsStatistics.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\MainForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\SkillDiary.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**/*.Function.cs">
        <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <!-- 把任意 *.Function.cs 折叠到去掉 .Function 后的同名 .cs 下 -->
    <Compile Update="**/*.Function.cs">
      <!-- %(Filename) 不带扩展名 -->
      <DependentUpon>$([System.String]::Copy('%(Filename)').Replace('.Function','')).cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>